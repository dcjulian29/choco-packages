<Rule Name="TypeScriptCompile" DisplayName="TypeScript ファイル" PageTemplate="generic" Description="TypeScript ファイル" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Categories>
    <Category Name="General" DisplayName="全般"/>
  </Rule.Categories>

  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" HasConfigurationCondition="false" ItemType="TypeScriptCompile"/>
  </Rule.DataSource>

  <EnumProperty Name="{}{ItemType}" DisplayName="パッケージ アクション" Category="General" F1Keyword="javascript.project.property.packageaction" Description="アプリケーション パッケージが生成されたときにこのファイルに実行されるアクションを指定します。">
    <EnumValue Name="None" DisplayName="なし"/>
    <EnumValue Name="Content" DisplayName="コンテンツ"/>
    <EnumValue Name="AppxManifest" DisplayName="アプリケーション マニフェスト"/>
    <EnumValue Name="PRIResource" DisplayName="リソース"/>
    <EnumValue Name="TypeScriptCompile" DisplayName="TypeScriptCompile"/>

    <EnumProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Configuration" SourceType="Item" ItemType="TypeScriptCompile" HasConfigurationCondition="false"/>
    </EnumProperty.DataSource>
  </EnumProperty>

  <EnumProperty Name="CopyToOutputDirectory" DisplayName="出力ディレクトリにコピーする" Category="General" F1Keyword="javascript.project.property.copytooutputdirectory" Description="ファイルを出力フォルダーにコピーするかどうかを指定します。">
    <EnumValue Name="Never" DisplayName="コピーしない"/>
    <EnumValue Name="Always" DisplayName="常にコピーする"/>
    <EnumValue Name="PreserveNewest" DisplayName="新しい場合はコピーする"/>
  </EnumProperty>

  <StringProperty Name="Identity" DisplayName="ファイル名" ReadOnly="true" Category="General" F1Keyword="javascript.project.property.filename" Description="ファイルまたはフォルダーの名前です。">
    <StringProperty.DataSource>
      <DataSource Persistence="Intrinsic" ItemType="TypeScriptCompile" PersistedName="Identity"/>
    </StringProperty.DataSource>
  </StringProperty>

  <StringProperty Name="FullPath" DisplayName="完全パス" ReadOnly="true" Category="General" F1Keyword="javascript.project.property.fullpath" Description="ファイルの場所です。">
    <StringProperty.DataSource>
      <DataSource Persistence="Intrinsic" ItemType="TypeScriptCompile" PersistedName="FullPath"/>
    </StringProperty.DataSource>
  </StringProperty>

  <BoolProperty Name="Visible" Visible="false"/>
  <StringProperty Name="DependentUpon" Visible="false"/>
  <StringProperty Name="Link" Visible="false"/>
  <EnumProperty Name="SubType" Visible="false">
    <EnumValue Name="Designer"/>
  </EnumProperty>
</Rule>
