{
    "update.mode": "none",
    "editor.minimap.enabled":  false,
    "editor.renderWhitespace":  "all",
    "window.zoomLevel":  0,
    "editor.smoothScrolling":  true,
    "workbench.editor.restoreViewState": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.links":  false,
    "editor.snippetSuggestions":  "top",
    "editor.wordWrap":  "on",
    "workbench.editor.enablePreview":  false,
    "workbench.editor.enablePreviewFromQuickOpen":  false,
    "workbench.statusBar.feedback.visible":  false,
    "window.restoreWindows":  "none",
    "files.hotExit":  "off",
    "files.insertFinalNewline":  true,
    "files.trimFinalNewlines":  true,
    "files.trimTrailingWhitespace":  true,
    "explorer.autoReveal":  false,
    "debug.openExplorerOnEnd":  true,
    "git.autofetch":  true,
    "git.enableCommitSigning":  false,
    "workbench.startupEditor":  "welcomePageInEmptyWorkbench",
    "terminal.integrated.enablePersistentSessions": false,
    "editor.fontFamily": "'CaskaydiaCove NF','CaskaydiaCove Nerd Font Mono'",
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "Monokai",
    "editor.tabSize": 2,
    "editor.codeLensFontSize": 9,
    "editor.inlayHints.fontSize": 9,
    "editor.mouseWheelZoom": true,
    "editor.wrappingIndent": "deepIndent",
    "editor.suggestFontSize": 11,
    "editor.suggestSelection": "first",
    "workbench.enableExperiments": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.welcomePage.preferReducedMotion": true,
    "workbench.preferredDarkColorTheme": "One Monokai",
    "workbench.preferredLightColorTheme": "One Monokai",
    "workbench.tree.renderIndentGuides": "always",
    "window.autoDetectHighContrast": false,
    "window.newWindowDimensions": "offset",
    "window.openFilesInNewWindow": "default",
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.sortOrder": "alphabetical",
    "security.workspace.trust.banner": "always",
    "security.workspace.trust.startupPrompt": "always",
    "cSpell.allowCompoundWords": true,
    "scm.inputFontSize": 11,
    "debug.console.fontSize": 12,
    "debug.console.lineHeight": 12,
    "terminal.integrated.fontSize": 12,
    "editor.cursorBlinking": "expand",
    "terminal.integrated.cursorStyle": "line",
    "vscode-kubernetes.kubectl-path.windows": "C:\\ProgramData\\chocolatey\\bin\\kubectl.exe",
    "terminal.integrated.fontFamily": "monospace",
    "git.confirmSync": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.plusFeatures.enabled": false,
    "editor.fontLigatures": true,
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.organizeImports": true
      },
    },
    "isort.args":["--profile", "black"],
    "githubPullRequests.queries": [
    {
        "label": "Waiting For My Review",
        "query": "is:open review-requested:${user}"
    },
    {
        "label": "Assigned To Me",
        "query": "is:open assignee:${user}"
    },
    {
        "label": "Created By Me",
        "query": "is:open author:${user}"
    },
    {
        "label": "Mentioned Me",
        "query": "is:open mentions:${user}"
    }
    ],
    "markdownlint.config": {
        "default": true,
        "MD003": { "style": "atx" },
        "MD007": { "indent": 2 },
        "no-hard-tabs": true
    },
    "markdownlint.focusMode": 2,
    "yaml.yamlVersion": "1.2",
    "yaml.format.enable": true,
    "yaml.format.singleQuote": true,
    "yaml.format.bracketSpacing": true,
    "yaml.validate": true,
    "yaml.completion": true,
    "yaml.schemaStore.enable": true,
    "[yaml]": {
      "editor.tabSize": 2,
      "editor.formatOnType": true
    }
}
