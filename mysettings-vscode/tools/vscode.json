{
    "update.mode": "none",
    "editor.minimap.enabled":  false,
    "editor.renderWhitespace":  "all",
    "window.zoomLevel":  0,
    "editor.smoothScrolling":  true,
    "workbench.editor.restoreViewState": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.links":  false,
    "editor.snippetSuggestions":  "top",
    "editor.wordWrap":  "on",
    "workbench.editor.enablePreview":  false,
    "workbench.editor.enablePreviewFromQuickOpen":  false,
    "workbench.statusBar.feedback.visible":  false,
    "window.restoreWindows":  "none",
    "files.hotExit":  "off",
    "files.insertFinalNewline":  true,
    "files.trimFinalNewlines":  true,
    "files.trimTrailingWhitespace":  true,
    "explorer.autoReveal":  false,
    "debug.openExplorerOnEnd":  true,
    "git.autofetch":  true,
    "git.enableCommitSigning":  false,
    "[typescript]":  {
                         "editor.formatOnSave":  true,
                         "editor.formatOnPaste":  true
                     },
    "[markdown]":  {
                       "editor.formatOnSave":  true,
                       "editor.renderWhitespace":  "boundary",
                       "editor.acceptSuggestionOnEnter":  "off"
                   },
    "[yaml]":  {
                   "editor.tabSize":  2,
                   "editor.autoIndent":  true
               },
    "workbench.startupEditor":  "welcomePageInEmptyWorkbench",
    "terminal.integrated.enablePersistentSessions": false,
    "editor.fontFamily": "Cascadia Code",
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "One Monokai",
    "editor.tabSize": 2,
    "editor.codeLensFontSize": 11,
    "editor.inlayHints.fontSize": 11,
    "editor.mouseWheelZoom": true,
    "editor.wrappingIndent": "deepIndent",
    "editor.suggestFontSize": 11,
    "editor.suggestSelection": "first",
    "workbench.enableExperiments": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.welcomePage.preferReducedMotion": true,
    "workbench.preferredDarkColorTheme": "One Monokai",
    "workbench.preferredLightColorTheme": "One Monokai",
    "workbench.tree.renderIndentGuides": "always",
    "window.autoDetectHighContrast": false,
    "window.newWindowDimensions": "offset",
    "window.openFilesInNewWindow": "default",
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.sortOrder": "alphabetical",
    "security.workspace.trust.banner": "always",
    "security.workspace.trust.startupPrompt": "always",
    "ansible.executionEnvironment.containerEngine": "docker",
    "ansible.executionEnvironment.enabled": true,
    "cSpell.allowCompoundWords": true,
    "scm.inputFontSize": 11,
    "debug.console.fontSize": 12,
    "debug.console.lineHeight": 12,
    "terminal.integrated.fontSize": 12,
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "block-outline",
    "terminal.integrated.cursorStyle": "line"
}
